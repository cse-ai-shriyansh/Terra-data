# Environment Configuration for Terra25

# NASA Earthdata Credentials (required for LAADS access)
# Create account at https://urs.earthdata.nasa.gov/
EARTHDATA_USERNAME=your_earthdata_username
EARTHDATA_PASSWORD=your_earthdata_password

# Alternative: Use .netrc file instead of env vars
# Create ~/.netrc with:
# machine urs.earthdata.nasa.gov
# login your_username
# password your_password

# S3 Storage Configuration
# For production, use AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=terra25-data

# For local development, MinIO is automatically configured
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password123
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=terra25-local

# API Configuration
API_PORT=3001
API_SECRET_KEY=your_secret_key_here_change_in_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_MINIO_ENDPOINT=http://localhost:9000

# Ingestor Service Configuration
INGESTOR_WORKER_INTERVAL_MS=5000
MAX_CONCURRENT_DOWNLOADS=3
TILE_CACHE_SIZE_MB=500

# Database Configuration (optional - uses file-based storage if not set)
DATABASE_URL=postgresql://postgres:password@localhost:5432/terra25
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=terra25

# External API Configuration
NASA_GIBS_WMTS_URL=https://gibs.earthdata.nasa.gov/wmts/epsg4326/best
LAADS_DAAC_URL=https://ladsweb.modaps.eosdis.nasa.gov/api/v2
APPEEARS_API_URL=https://lpdaacsvc.cr.usgs.gov/appeears/api

# Default Settings
DEFAULT_TERRA_LAYER=MODIS_Terra_CorrectedReflectance_TrueColor
DEFAULT_RESOLUTION=250m
DEFAULT_TILE_FORMAT=jpg

# Export Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
EXPORT_TEMP_DIR=/tmp/terra25_exports
MAX_EXPORT_DURATION_SECONDS=30
MAX_FRAMES_PER_EXPORT=300

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here

# Performance
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
MAX_MEMORY_USAGE_MB=1024